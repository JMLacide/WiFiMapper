<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jnhvic001.wifimapperv1.HomeScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VIEW MAP"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="291dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WiFi signal strength scale from strongest to weakest: " />

        <View android:id="@+id/green"
            android:text="5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:background="#B2FF66"
            android:visibility="visible"/>

        <View android:id="@+id/yellow"
            android:text="4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:background="#FFFF00"
            android:visibility="visible"/>

        <View android:id="@+id/orange"
            android:text="3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:background="#FFb266"
            android:visibility="visible"/>

        <View android:id="@+id/red"
            android:text="2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:background="#FF6666"
            android:visibility="visible"/>

        <View android:id="@+id/grey"
            android:text="1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:background="#C0C0C0"
            android:visibility="visible"/>

        <Spinner
            android:id="@+id/planets_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_view_id"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="original" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
